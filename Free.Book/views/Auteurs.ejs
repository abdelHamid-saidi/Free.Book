<!DOCTYPE html>
<html lang="en">

<%- include('head') %>

    <body>
        <%- include('navbar') %>

            <!-- Header Start -->
            <header class="container-fluid page-header py-5 mb-3 wow fadeIn" data-wow-delay="0.1s">
                <div class="container text-center py-5">
                    <h1 class="display-2 text-white mb-4 animated slideInDown">Auteurs</h1>
                    <nav aria-label="breadcrumb animated slideInDown">
                        <ol class="breadcrumb justify-content-center mb-0">
                            <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                            <li class="breadcrumb-item text-primary" aria-current="page">Auteurs</li>
                        </ol>
                    </nav>
                </div>
            </header>
            <!-- Header End -->

            <!-- auteurs Start -->
            <div class="container-xxl py-5">
                <div class="container">
                    <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                        <p class="fs-5 fw-medium text-primary">Nos auteurs</p>
                        <h1 class="display-5 mb-5">Notre liste d'auteurs</h1>
                    </div>
                    <div class="row g-4" id="auteurs">

                    </div>
                </div>
            </div>
            <!-- auteurs End -->


            <%- include('footer') %>
                <script>
                    function generateTeamMember(index) {
                        var name = "Nom de membre (" + (index + 1) + ")";

                        var teamMember = document.createElement('div');
                        teamMember.className = "col-sm-12 col-md-6 col-lg-4 col-xl-3 col-xxl-2 wow fadeInUp";
                        teamMember.setAttribute("data-wow-delay", "0.1s");

                        teamMember.innerHTML = `
                                <div class="team-item rounded overflow-hidden pb-4">
                                <img class="img-fluid mb-4" src="./public/img/team-2.jpg" alt="">
                                <h4>${name}</h4>
                                <p class="text-primary m-0">Algerie</p>
                                <p class="text-primary m-0">30/01/2004 - (-)</p>
                                <br>
                                <h6>liste de livre</h6>
                                <a href="livre.html" class="text-primary m-0">livre 1</a>
                                <br>
                                <a href="livre.html" class="text-primary m-0">livre 2</a>
                                <br>
                                <a href="livre.html" class="text-primary m-0">livre 3</a>
                                <br>
                                <a href="livre.html" class="text-primary m-0">livre 4</a>
                                <ul class="team-social">
                                    <li><a class="btn btn-square" href=""><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a class="btn btn-square" href=""><i class="fab fa-twitter"></i></a></li>
                                    <li><a class="btn btn-square" href=""><i class="fab fa-instagram"></i></a></li>
                                    <li><a class="btn btn-square" href=""><i class="fab fa-linkedin-in"></i></a></li>
                                </ul>
                            </div>
                        `;

                        return teamMember;
                    }

                    var parentElement = document.querySelector('#auteurs');

                    for (var i = 0; i < 7; i++) {
                        var teamMember = generateTeamMember(i);
                        parentElement.appendChild(teamMember);
                    }

                </script>
    </body>

</html>